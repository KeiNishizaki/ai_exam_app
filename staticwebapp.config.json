{
  "trailingSlash": "Auto",
  "platform": {
    "apiLanguage": "node",
    "nodeVersion": "20"
  },
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*"] 
  },
  "routes": [
    {
      "route": "/api/*",
      "methods": ["POST", "GET", "OPTIONS"],
      "allowedRoles": ["anonymous"]
    }
  ]
}